<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
        {{successMsg}}
        </div>
    </div>
</div>

{{#each books}}
<div class="row" style="margin-top:2%">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
        <div class="card" style="width: 20rem; margin-top:2%;">
            <div class="thumbnail">
                <center><img class="img-responsive" src="{{this.imagePath}}" alt="Card image cap"></center>

                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <div class="clearfix">
                        <div class="price pull-left">Rs.{{this.price}}/-</div>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right">Add to Cart</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}

